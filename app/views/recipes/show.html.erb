<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @recipe.name %>
</p>

<p>
  <b>Description:</b>
  <%= @recipe.description %>
</p>

<p>
	<b>Ingredients:</b>
	<ul>
		<% @recipe.recipe_ingredients.each do |ri| %>
			<li>
				<%= ri.ingredient.name %> - <%= ri.quantity %> 
				- 
				<%= link_to 'Delete', ri, confirm: 'Are you sure?', method: :delete %>

			</li>
		<% end %>
	</ul>


<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
